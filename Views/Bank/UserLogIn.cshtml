@model BankingSystem.Models.NewUserViewModel

@{
    ViewData["Title"] = "UserLogIn";
}

<h1>UserLogIn</h1>

<h4>NewUserViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UserLogIn">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="EmailId" class="control-label"></label>
                <input asp-for="EmailId" class="form-control" />
                <span asp-validation-for="EmailId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MobNo" class="control-label"></label>
                <input asp-for="MobNo" class="form-control" />
                <span asp-validation-for="MobNo" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="LogIn" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="HomePage">Back to HomePage</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
