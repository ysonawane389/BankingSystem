@model IEnumerable<BankingSystem.Models.NewUserViewModel>

@{
    ViewData["Title"] = "NewUserDetails";
}

<h1>NewUserDetails</h1>
<table     height="30px"width="1000px" >
    <tr>

        <th>
            <h3>    <a asp-action="Create">Create New</a></h3>
        </th>
        
        <th>
             <div style="text-align:right">  <a asp-action="HomePage"><h3>LogOut Admin</h3></a></div>
        </th>
    </tr>
    </table>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AccNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccHolderName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MobNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmailId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfBirth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AvlBalance)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AccNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AccHolderName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MobNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmailId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfBirth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AvlBalance)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AccNo">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.AccNo">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.AccNo">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
